.page {
  padding: 40rpx;
  text-align: center;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.card {
  background-color: #f5f5f5;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1);
}

.item {
  display: block;
  font-size: 32rpx;
  margin: 10rpx 0;
  color: #333;
}

.note {
  margin-top: 40rpx;
  color: #777;
  font-size: 28rpx;
}
