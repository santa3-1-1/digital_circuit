.page {
  padding: 20rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.card {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.question {
  font-size: 32rpx;
  color: #333;
}

.redo-area {
  margin-top: 40rpx;
  padding: 20rpx;
  background: #fff8e1;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.option-btn {
  margin: 10rpx;
  background-color: #4caf50;
  color: white;
  padding: 12rpx 0;
  border-radius: 12rpx;
}

.option-btn:active {
  background-color: #45a049;
}

.feedback {
  display: block;
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.empty {
  text-align: center;
  color: #999;
  font-size: 30rpx;
  margin-top: 60rpx;
}
