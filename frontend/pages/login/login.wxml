<view class="page">
  <text class="title">🔐 用户登录</text>

  <input class="input" placeholder="用户名" data-field="username" bindinput="onInput" />
  <input class="input" placeholder="密码" password="true" data-field="password" bindinput="onInput" />

  <button class="btn" bindtap="login">登录</button>
  <text class="error">{{errorMsg}}</text>
</view>
