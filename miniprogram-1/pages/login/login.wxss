.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 150rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.role-switch {
  width: 70%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.role-item {
  width: 45%;
  padding: 20rpx 0;
  text-align: center;
  border: 2rpx solid #ccc;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #666;
}

.role-item.active {
  background-color: #1976d2;
  color: white;
  border-color: #1976d2;
}

.input {
  width: 80%;
  border: 2rpx solid #ccc;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  width: 80%;
  background-color: #1976d2;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 0;
}

.wx-btn {
  width: 80%;
  background-color: #1AAD19;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.loading {
  margin: 20rpx;
  color: #555;
}

.error {
  margin-top: 20rpx;
  color: red;
}
